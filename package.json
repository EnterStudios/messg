{
  "name": "messg",
  "description": "Messages via CSS3 animations",
  "version": "1.2.0",
  "keywords": [
    "message",
    "alert",
    "confirm"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/andrepolischuk/messg.git"
  },
  "dependencies": {
    "ea": "^0.3.2",
    "component-event": "^0.1.4",
    "uniquid": "^1.0.0"
  },
  "devDependencies": {
    "duo": "^0.11.4",
    "mocha": "^2.1.0"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf messg.js components",
    "prebuild": "npm run clean",
    "build": "duo --standalone messg --stdout index.js > messg.js",
    "build-dev": "duo --development --stdout test/test.js > build.js",
    "pretest": "npm run build-dev",
    "test": "open test/index.html"
  },
